<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.neostore">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".ui.loginoptions.LoginOptionsActivity">
        </activity>
        <activity android:name=".ui.mvvm.address.AddressListActivity">
        </activity>
        <activity android:name=".ui.mvvm.address.AddAddressActivity">
        </activity>
        <activity android:name=".ui.mvvm.mycart.MyCartActivity">
        </activity>
        <activity android:name=".ui.mvp.productdetails.ProductDetailsActivity">
        </activity>
        <activity android:name=".ui.mvp.productlisting.ProductListingActivity">
        </activity>
        <activity
                android:name=".ui.homescreen.HomeScreenActivity"
                android:label="@string/title_activity_navigation_drawer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.startupsplash.StartupSplashActivity">
        </activity>
        <activity android:name=".ui.mvp.login.LoginActivity"/>
        <activity android:name=".ui.mvp.registration.RegistrationActivity"/>
    </application>

</manifest>